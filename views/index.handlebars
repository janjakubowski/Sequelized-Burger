<div class="bg">

	<div class="container">
		<div>
			<h1>Burger Madness</h1>
		</div>

		<div class="row">

			<div class="col-sm-6 col-box">
				<h3>Burgers To Be Devoured</h3>

				<ul>
				{{#each Burger}}
					{{!-- {{#unless devoured}} --}}
						<li>
							{{burger_name}}

							<button class="devour-it btn-success btn-sm" data-id="{{id}}">
									DEVOUR IT!
							</button>

							<button class="duplicate btn-primary btn-sm" data-name="{{burger_name}}">
									Add 1 more
							</button>
						</li>

					{{!-- {{/unless}} --}}
				{{/each}}
				</ul>
			</div>

			<div class="col-sm-6 col-box">

			<h3>Too Late! Already have been devoured</h3>

			<ul>
				{{#each Burger}}
					{{#if devoured}}
						<li>
							{{burger_name}}
							<button class="delete-it btn-info btn-sm" data-id="{{id}}">
									Delete
							</button>
						</li>
					{{/if}}
				{{/each}}
			</ul>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-4"></div>
			<div class="col-sm-4 col-box">
				<h3>Add a Burger</h3>
				<form class="create-form">
					<div class="form-group">
						<label for="b_name">Give Your Burger a Name:</label>
						<input type="text" id="b_name" name="burger_name">
					</div>
					<button class="btn-primary" type="submit">Add It!</button>
				</form>
			</div>
			<div class="col-sm-4"></div>
		</div>
	</div>
		
</div>
